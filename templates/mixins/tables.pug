mixin overview-table(type,titles,selected,keys)
	.table-responsive
		table.table.table-hover
			thead
				tr
					- var n = 1
					each title in titles
						if n == 2
							th(scope='col').column-hd-md=title
						else if n > 3
							th(scope='col').column-hd-sm=title
						else
							th(scope='col')=title
						- n++
			tbody
				each s in selected
					tr.clickable(data-href=s.link, data-type=type)
						- var n = 1
						each key in keys
							if key
								if n == 2
									td.column-hd-md=s[key]
								else if n > 3
									td.column-hd-sm=s[key]
								else
									td=s[key]
							- n++

