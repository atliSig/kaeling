mixin overview-table(type,titles,selected,keys)
	.table-responsive
		table.table.table-hover
			thead
				tr
					- var n = 1
					each title in titles
						if n == 2
							th(scope='col').column-hd-md=title
						else if n > 3
							th(scope='col').column-hd-sm=title
						else
							th(scope='col')=title
						- n++
			tbody
				each s in selected
					tr.clickable(data-href=s.link, data-type=type)
						- var n = 1
						each key in keys
							if key
								if n == 2
									td.column-hd-md=s[key]
								else if n > 3
									td.column-hd-sm=s[key]
								else
									td=s[key]
							- n++

mixin overview-job-table(type,titles,selected,keys,measurements)
	.table-responsive
		table.table
			thead
				tr
					- var n = 1
					each title in titles
						if n == 2
							th(scope='col').column-hd-md=title
						else if n > 3
							th(scope='col').column-hd-sm=title
						else
							th(scope='col')=title
						- n++
			tbody
				each s in selected
					tr.overview-row
						- var n = 0
						each key in keys
							if key
								if n == 2
									td.column-hd-md=s[key]
								else if n > 3
									td.column-hd-sm=s[key]
								else
									td=s[key]
								- n++
						td
							a.btn.btn-secondary.btn-sm.row-button(href='/forms/'+s.link) skoða
					tr.info-row(data-href=s.link)
						- var span = titles.length+1
						td(colspan=span).detail-cell
							.container-fluid
								.row
									.col-12.col-no-padding
										.table-responsive
											table.table.detail-table
												thead
													tr
														th(scope='col') Mæling
														th(scope='col') Gildi
														th(scope='col') Eining
												tbody
													each val,idx in s.measurements
														if val
															tr
																td=val.identifier
																td=val.value
																td=val.unit