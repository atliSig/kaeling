extends ../../layouts/default

block content
	.container.form-container
		.row
			.col-12
				form(method='post')
					.form-group
						label(for='name') Nafn
						input(name='name')#name.form-control(type='text', value=job.name)
					.form-group.row
						.col-md-6.col-12
							label(for='user') Eigandi verks
							select(name='user')#user.form-control
								each user in lists.userList
									if user._id == job.user._id
										option(value=user._id selected=true)=user.name
									else
										option(value=user._id)=user.name
						.col-md-6.col-12
							label(for='customer') Viðskiptavinur
							select(name='customer')#customer.form-control
								each customer in lists.customerList
									if customer._id == job.customer._id
										option(value=customer._id selected=true)=customer.name
									else
										option(value=customer._id)=customer.name
					.form-group.row
						.col-md-6.col-12
							label(for='period') Tíðni skoðana
							input(name='period')#period.form-control(type='number', value=job.period, min="0")

					button.btn.btn-primary.float-right.right-button(type='submit') Breyta
					a.btn.btn-secondary.float-right(href='../') Til baka

