extends ../layouts/default
include ../mixins/tables.pug

block content
	.container-fluid.endpoint-container
		.row.endpoint-row
			.col-xl-3.col-md-5.col-12.left-column
				.row
					.col-12
						h4=user.name
						p=user.email
						hr
					.col-12
						.card
							.card-block
								p.card-text='Hefur unnið að '+count+' skýrslum'
						hr
					.col-12
							a.btn.btn-primary.float-right(href='edit/') Breyta Notanda
			.col-xl-9.col-md-7.col-12.table-column
				+overview-table(type,titles,selected)
